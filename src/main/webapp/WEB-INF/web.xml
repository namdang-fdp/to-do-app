<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>HelloServlet</servlet-name>
  	<display-name>HelloServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.HelloServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TaskServlet</servlet-name>
  	<display-name>TaskServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.TaskServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CreateNewTaskServlet</servlet-name>
  	<display-name>CreateNewTaskServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.CreateNewTaskServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DeleteTaskServlet</servlet-name>
  	<display-name>DeleteTaskServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.DeleteTaskServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>HelloServlet</servlet-name>
  	<url-pattern>/Hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TaskServlet</servlet-name>
  	<url-pattern>/TaskServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateNewTaskServlet</servlet-name>
  	<url-pattern>/Create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeleteTaskServlet</servlet-name>
  	<url-pattern>/DeleteTaskServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
        <welcome-file>taskList.jsp</welcome-file>
    </welcome-file-list>
</web-app>
